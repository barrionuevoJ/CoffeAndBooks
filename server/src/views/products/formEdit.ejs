<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/styles.css">

    <link rel="stylesheet" href="/css/styles-header.css">
    <link rel="stylesheet" href="/css/styles-footer.css">
    <link rel="stylesheet" href="/css/styles-formEdit.css">

    <link rel="stylesheet" href="/css/styles-addButton.css">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

    <title>Document</title>
</head>

<body>
    <%- include('../partials/mainHeader.ejs') %>

        <main class="edit">
            <section class="update">
                
                <% if (locals.errors) { %>
                    <article class="errors">
                        <div class="text-danger">
                            <ul>
                                <% for( let prop in errors) { %>
                                    <li> <%= locals.errors[prop].msg %></li>
                                <% } %>
                            </ul>
                        </div>
                    </article>
                <% } %>

                <form action="/products/edit/<%= libro.id_producto %>?_method=PUT" method="post" enctype="multipart/form-data">
                    <h1>Editar producto</h1>

                    <div class="inputs">
                        <div class="inputs-top">
                            <div class="left-side">
                                <div class="input">
                                    <label for="titulo">Titulo</label>
                                    <input type="text" name="titulo" id="titulo" value="<%= libro.titulo  %>">
                                </div>

                                <div class="input">
                                    <label for="id_genero">Genero</label>
                                    <select type="number" name="id_genero" id="id_genero">
                                        <option value=""> Seleccione una opcion </option>
                                        <% generos.forEach(genero=> { %>
                                            <option value="<%= genero.id_genero %>" <%=libro.id_genero==genero.id_genero
                                                ? 'selected' : '' %>>
                                                <%= genero.genero%>
                                            </option>
                                            <%}); %>
                                    </select>
                                </div>
                            </div>
                            <div class="right-side">
                                <div class="input">
                                    <label for="id_autor">Autor</label>
                                    <select type="number" name="id_autor" id="id_autor">
                                        <option value="">Seleccione una opción</option>
                                        <% autores.forEach(autor=> { %>
                                            <option value="<%= autor.id_autor %>" <%=libro.id_autor==autor.id_autor
                                                ? 'selected' : '' %>>
                                                <%= autor.autor%>
                                            </option>
                                            <%}); %>
                                    </select>
                                </div>

                                <div class="input">
                                    <label for="id_categoria">Categoria</label>
                                    <select name="id_categoria" id="id_categoria">
                                        <option value="">Seleccione una opción</option>
                                        <% categorias.forEach(categoria=> { %>
                                            <option value="<%= categoria.id_categoria %>"
                                                <%=libro.id_categoria==categoria.id_categoria ? 'selected' : '' %>>
                                                <%= categoria.categoria%>
                                            </option>
                                            <%}); %>
                                    </select>
                                </div>
                            </div>
                        </div>


                        <div class="input">
                            <label for="descripcion">Descripcion</label>
                            <textarea name="descripcion" id="descripcion" cols="30"
                                rows="10"><%= libro.descripcion %></textarea>
                        </div>

                        <div class="inputs-numbers">

                            <div class="input-number">
                                <label for="cantidad">Cantidad</label>
                                <input type="number" name="cantidad" id="cantidad" value="<%= libro.cantidad %>">
                            </div>

                            <div class="input-number">
                                <label for="descuento">Descuento</label>
                                <input type="number" name="descuento" id="descuento" value="<%= libro.descuento %>">
                            </div>

                            <div class="input-number">
                                <label for="precio">Precio</label>
                                <input type="number" name="precio" id="precio" value="<%= libro.precio %>">
                            </div>

                        </div>
                    </div>
                    <div class="input-file">
                        <label for="img">Imagen del producto</label>
                        <input type="file" name="img" id="img" value="<%= locals.old && old.img ? old.img: '' %>">
                    </div>

                    <div class="buttons">
                        <button type="submit" class="btn-submit" title="Añadir"> Añadir libro </button>
                        <button type="reset" class="btn-reset" title="Añadir"> Limpiar </button>
                    </div>

                </form>

            </section>

            <%- include('../partials/addButton') %>

        </main>
        <%- include('../partials/mainFooter.ejs') %>>
</body>

</html>